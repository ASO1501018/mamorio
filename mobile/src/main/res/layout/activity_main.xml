<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/pale_orange"
    tools:context="st.asojuku.ac.jp.gparentandchildapp.MainActivity">



    <Button
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/debug_PID_button"
        android:text="@string/retrieval"
        android:textColor="@color/white"
        android:background="@drawable/button_background"
        android:textSize="25sp"
        android:padding="10dp"
        android:layout_alignParentEnd="true"
        android:typeface="sans" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/debug_PID_edtext"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:layout_toStartOf="@id/debug_PID_button"
        android:layout_alignBaseline="@id/debug_PID_button"
        android:layout_alignBottom="@+id/debug_PID_button"
        android:typeface="sans" />




    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/debug_PID_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/line"
            android:orientation="vertical">

